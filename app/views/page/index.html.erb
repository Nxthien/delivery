<div class="main-content">
	<div class="banner-search">
		<div class="form-search" style="width: 60%">
			<%= simple_form_for :search, url: "" do |f| %>
				<span style="display: inline-block; width: 70% !important;"><%= f.input :name ,label: false , placeholder: "Đặt món trực tuyến, giao tận nơi tại 1242 địa điểm ở Hà Nội từ 08:30 - 21:00"%></span>
				<span style="display: inline-block"><%= f.submit%></span>						
			<% end %>
		</div>
	</div>
	<div class="restaurant-index">
		<div class="title">
			<h2>ĐỊA ĐIỂM ĐANG HOT</h2>
		</div>
		<div class="list-restaurant">
			<%= render "/page/hot_restaurant"%>
		</div>
		<div class="view-more">
			Xem Thêm <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
		</div>
	</div>
</div>