<div class="content">
  <div class="user-data">
    <div class="table-data">
      <table class="table table-hover">
        <thead>
          <tr>
            <th style="width: 5%">ID</th>
            <th style="width: 15%">Name</th>
            <th style="width: 15%">Email</th>
            <th style="width: 15%">Address</th>
            <th style="width: 10%">Phone Number</th>
            <th style="width: 10%">IsAdmin</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <%= link_to "#", method: true, name: "user_id", value: user.id do %>
              <tr class="data-restaurant" id="<%= user.id %>">
                <td style="width: 5%"><%= user.id %></td>
                <td style="width: 15%"><%= user.name %></td>
                <td style="width: 15%"><%= user.email %></td>
                <td style="width: 15%"><%= user.address %></td>
                <td style="width: 10%"><%= user.phonenumber %></td>
                <td style="width: 10%"><%= user.isadmin %></td>
                <td style="width: 20%">
                  <ul class="action">
                    <li>
                      <%= link_to admins_user_path(user.id) do %>
                        <i class="fa fa-info-circle" aria-hidden="true"></i>Show
                      <% end %>
                    </li>
                    <li>
                      <%= link_to "#", data: {toggle: "modal", target:"#bs-example-modal-lg"} do %>
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit
                      <% end %>
                      <div class="modal fade" id="bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                        <div class="modal-dialog modal-lg" role="document">
                          <div class="modal-content">
                            <%= render partial: "/admins/users/edit", locals: { user: user } %>
                          </div>
                        </div>
                      </div>
                    </li>
                    <li>
                      <%= link_to admins_user_path(user.id), method: 'delete', data: { confirm: "You sure?"} do %>
                        <i class="fa fa-trash-o" aria-hidden="true"></i>Destroy
                      <% end %>
                    </li>
                  </ul>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div style="text-align: center">
      <%= will_paginate @restaurants, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>