<div class="restaurant">
		<div class="navbar-control">
			<div class="add-restaurant pd-r">
				<%= link_to "Add", "#", class: "btn btn-success", data: {toggle: "modal", target:".modal-new "}%>
				<div class="modal fade modal-new" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
				  <div class="modal-dialog modal-lg" role="document">
				    <div class="modal-content">
				      <%= render partial: "/admins/list_types/new", locals: { res: @res }%>
				    </div>
				  </div>
				</div>
			</div>
		</div>
		<div class="table-data">
			<table class="table table-hover">
		    <thead>
		      <tr>
		        <th style="width: 5%">ID</th>
		        <th style="width: 15%">Name</th>
		        <th style="width: 15%">Type Food</th>
		        <th style="width: 15%">Restaurant Name</th>
		        <th style="width: 10%">List Food</th>
		        <th style="width: 20%">Action</th>
		      </tr>
		    </thead>
		    <tbody>
		      <% @list_types.each do |type| %>
	      		<% @res = Restaurant.find(type.restaurant_id) %>
		      	<tr class="data-restaurant" >
		      		<td style="width: 5%"><%= type.id %></td>
		      		<td style="width: 15%"><%= type.name %></td>
		      		<td style="width: 15%"><%= type.type_food %></td>
		      		<td style="width: 15%"><%= @res.name %></td>
		      		<td style="width: 10%">Coming soon</td>
		      		<td style="width: 20%">
		      			<ul class="action">
		      				<li>
		      					<%= link_to admins_restaurant_list_type_path(@res, type) do %>
									    <i class="fa fa-info-circle" aria-hidden="true"></i>Show
										<% end %>
		      				</li>
		      				<li>
		      					<%= link_to "#", data: {toggle: "modal", target:"#edit"} do %>
									    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit
										<% end %>
										<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
										  <div class="modal-dialog modal-lg" role="document">
										    <div class="modal-content">
										      <%= render partial: "/admins/list_types/edit", locals: { res: @res ,type: type } %>
										    </div>
										  </div>
										</div>
		      				</li>
		      				<li>
		      					<%= link_to admins_restaurant_list_type_path(@res, type ), method: 'delete', data: { confirm: "You sure?"} do %>
									    <i class="fa fa-trash-o" aria-hidden="true"></i>Destroy
										<% end %>
		      				</li>
		      			</ul>
		      		</td>
			      </tr>
			    <% end %>
		    </tbody>
		  </table>
		</div>
	</div>